"source": [
"import pandas as pd\n",
"import matplotlib.pyplot as plt\n",
"%matplotlib inline\n",
"\n",
"# Carica il CSV di esempio (path relativo alla cartella del repo)\n",
"df = pd.read_csv('../data/sample_air_data.csv', parse_dates=['date'])\n",
"df.head()"
]
},
{
"cell_type": "code",
"execution_count": null,
"metadata": {},
"outputs": [],
"source": [
"# Pulizia minima e colonne utili\n",
"df = df.dropna(subset=['date','value','pollutant','station_id']).copy()\n",
"df['year'] = df['date'].dt.year\n",
"df['month'] = df['date'].dt.month\n",
"df.info()\n",
"df.describe()"
]
},
{
"cell_type": "code",
"execution_count": null,
"metadata": {},
"outputs": [],
"source": [
"# Trend medio annuale per inquinante\n",
"annual = df.groupby(['year','pollutant'])['value'].mean().unstack()\n",
"ax = annual.plot(marker='o', figsize=(10,4))\n",
"ax.set_title('Andamento medio annuale per inquinante')\n",
"ax.set_ylabel('Valore medio')\n",
"plt.show()"
]
},
{
"cell_type": "code",
"execution_count": null,
"metadata": {},
"outputs": [],
"source": [
"# Classifica stazioni per valore medio (ultimo anno disponibile)\n",
"last_year = df['year'].max()\n",
"ranking = df[df['year']==last_year].groupby('station_id')['value'].mean().sort_values(ascending=False)\n",
"print(f'Anno: {last_year}')\n",
"print(ranking)"
]
},
{
"cell_type": "code",
"execution_count": null,
"metadata": {},
"outputs": [],
"source": [
"# Salva dataset processato per uso nell'app\n",
"df.to_csv('../data/processed_air_data.csv', index=False)\n",
"print('Saved processed dataset to ../data/processed_air_data.csv')"
]
}
]
}
